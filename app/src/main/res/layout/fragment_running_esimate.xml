<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huyigong.route_nightrun.running_esimate">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="430dp"
        android:layout_weight="1"
        android:orientation="horizontal">


          

        <RadioButton
            android:id="@+id/running_estimate"

            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:checked="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/test"
            android:padding="5dp"
            android:text="评价"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray" />


          

        <RadioButton
            android:id="@+id/running"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/running"
            android:gravity="center_horizontal|bottom"
            android:padding="5dp"
            android:text="夜跑"
            android:textColor="@android:color/darker_gray" />

          

        <RadioButton
            android:id="@+id/runningAppointment"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/talk"
            android:gravity="center_horizontal|bottom"
            android:padding="5dp"
            android:text="约跑"
            android:textColor="@android:color/darker_gray" />

          

        <RadioButton
            android:id="@+id/running_safety"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/safe"
            android:gravity="center_horizontal|bottom"
            android:padding="5dp"
            android:text="报警"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"

        app:srcCompat="@drawable/sport" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"

        android:drawableBottom="@drawable/side"
        android:drawableLeft="@drawable/alllm"
        android:drawableRight="@drawable/gotoright"
        android:elevation="0dp"
        android:gravity="center_horizontal|center"
        android:text="累计路程：0.0KM"
        android:textColor="?android:attr/textColorSecondaryInverseNoDisable"
        android:textSize="20sp"
        tools:textColor="?android:attr/textColorSecondaryInverseNoDisable" />

    <Button
        android:id="@+id/button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="280dp"
        android:background="@android:color/white"
        android:drawableBottom="@drawable/side"
        android:drawableLeft="@drawable/kg"
        android:drawableRight="@drawable/gotoright"
        android:gravity="center_horizontal|center"
        android:text="体重管理"
        android:textColor="?android:attr/textColorSecondaryInverseNoDisable"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="360dp"
        android:background="@android:color/white"
        android:drawableBottom="@drawable/side"
        android:drawableLeft="@drawable/testkg"
        android:drawableRight="@drawable/gotoright"
        android:gravity="center_horizontal|center"
        android:text="今日测评"
        android:textColor="?android:attr/textColorSecondaryInverseNoDisable"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"

        android:drawableBottom="@drawable/side"
        android:drawableLeft="@drawable/fire"
        android:drawableRight="@drawable/gotoright"
        android:elevation="0dp"
        android:gravity="center_horizontal|center"
        android:text="消耗卡路里："
        android:textColor="?android:attr/textColorSecondaryInverseNoDisable"
        android:textSize="20sp"
        tools:textColor="?android:attr/textColorSecondaryInverseNoDisable" />

</FrameLayout>
