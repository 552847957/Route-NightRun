<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huyigong.route_nightrun.IndoorRunActivity">

        <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/search"
            android:drawableLeft="@drawable/fangdajing"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="16dp" />

        <TableLayout
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow>
                <FrameLayout android:layout_gravity="center">
                    <Button
                        android:id="@+id/gym"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_db"
                        android:text="健身房"
                        android:textAllCaps="false"
                        android:textColor="@android:color/background_light"
                        android:textStyle="bold" />
                </FrameLayout>

                <FrameLayout android:layout_gravity="center">
                    <Button
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_db"
                        android:text="周边健身房详情"
                        android:textColor="@android:color/background_light"
                        android:textStyle="bold" />
                </FrameLayout>

            </TableRow>

        </TableLayout>

</FrameLayout>
