<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.running.Night_Running">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="430dp"
            android:layout_weight="1"
            android:orientation="horizontal">


              
            <RadioButton
                android:id="@+id/running_estimate"

                android:layout_width="15dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:checked="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/test"
                android:padding="5dp"
                android:text="评价"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray" />


              

            <RadioButton
                android:id="@+id/running"
                android:layout_width="15dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/running"
                android:gravity="center_horizontal|bottom"
                android:padding="5dp"
                android:text="夜跑"
                android:textColor="@android:color/darker_gray" />

              

            <RadioButton
                android:id="@+id/runningAppointment"
                android:layout_width="15dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/talk"
                android:padding="5dp"
                android:gravity="center_horizontal|bottom"
                android:text="约跑"
                android:textColor="@android:color/darker_gray" />

              

            <RadioButton
                android:id="@+id/running_safety"
                android:layout_width="15dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/safe"
                android:padding="5dp"
                android:gravity="center_horizontal|bottom"
                android:text="报警"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>


    </FrameLayout>

</LinearLayout>
